<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#1976D2</item>
        <item name="colorPrimaryVariant">#1565C0</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Fix popup menu text color -->
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/Widget.App.PopupMenu</item>
    </style>
    
    <!-- Custom popup menu style with light background and dark text -->
    <style name="Widget.App.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>